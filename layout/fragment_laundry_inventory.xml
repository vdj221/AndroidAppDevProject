<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.LaundryInventoryFragment"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="1"
        android:layout_height="wrap_content"
        android:id="@+id/inventory_labels"
        >
        <TextView
            android:id="@+id/Clothing_Name_Label"
            android:text="Name"
            style="@style/LaundryInventoryLabels"
            />

        <TextView
            android:id="@+id/Clothing_Type_Label"
            android:text="Clothing Type"
            style="@style/LaundryInventoryLabels"
            />
        <TextView
            android:id="@+id/Color_Label"
            android:text="Color"
            style="@style/LaundryInventoryLabels"
            />
        <TextView
            android:id="@+id/Material_Label"
            android:text="Material"
            style="@style/LaundryInventoryLabels"
            />
    </LinearLayout>
    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="270px"
        />
    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="540px"/>
    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="810px"/>
    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:layout_marginTop="20dp" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/clothing_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inventory_labels" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_baseline_delete_24"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="@color/gray"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@android:drawable/ic_input_add"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="@color/gray"
        />

</RelativeLayout>