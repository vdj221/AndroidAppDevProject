<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    tools:context=".fragment.DryingInstructionsFragment"
    >
    <TableRow
        android:id="@+id/inventory_labels"
        android:layout_width="0dp"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/Clothing_Type_Label"
            android:text="Drying Instructions"
            android:gravity="center"
            style="@style/LaundryInventoryText"
            />
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/Material_Label"
            android:text="Polyester Clothing"
            style="@style/LaundryInventoryText"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/black"
            />
        <TextView
            android:id="@+id/Clothing_Name_Label"
            android:text="Cottton Clothing "
            style="@style/LaundryInventoryText"
            />
    </TableRow>
    <TableRow

        android:layout_height="wrap_content">
        <TextView
            android:layout_width="540px"
            android:id="@+id/Polyester_Drying_Instructions"
            style="@style/LaundryInventoryText"
            android:gravity="top|center"
            android:layout_height="match_parent"
            android:text="@string/polyester_dry_instructions"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_width="1dp"
                android:layout_height="700dp"
                android:layout_gravity="center"
                android:background="@color/black"
                />
        </LinearLayout>

        <TextView
            android:layout_width="210dp"
            android:id="@+id/Cotton_Drying_Instructions"
            style="@style/LaundryInventoryText"
            android:layout_height="match_parent"
            android:gravity="top|center"
            android:text="@string/cotton_drying_instructions"/>
    </TableRow>

</TableLayout>